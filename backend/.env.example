# StreamHub Environment Configuration
# ====================================
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=StreamHub
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Settings (PostgreSQL + pgvector)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/streamhub
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# Redis Settings
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_CACHE_TTL=3600

# JWT Authentication
# IMPORTANT: Generate a secure secret key for production!
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Vector Search Settings
VECTOR_DIMENSIONS=1536
SIMILARITY_THRESHOLD=0.85

# CORS Settings (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
