# =============================================================================
# StreamHub - Environment Variables (Production)
# =============================================================================
# Copy this file to .env.prod and update with production values
# NEVER commit production secrets to version control
# Use a secrets manager in production (AWS Secrets Manager, Vault, etc.)
# =============================================================================

# -----------------------------------------------------------------------------
# Domain and SSL Configuration
# -----------------------------------------------------------------------------
DOMAIN=streamhub.example.com
ACME_EMAIL=admin@example.com

# Traefik dashboard authentication (generate with: htpasswd -nb admin password)
TRAEFIK_AUTH=admin:$$apr1$$xyz...

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# MUST be a strong random string in production
# Generate with: openssl rand -hex 32
SECRET_KEY=

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=streamhub
POSTGRES_PASSWORD=  # Use a strong password
POSTGRES_DB=streamhub

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_PASSWORD=  # Use a strong password

# -----------------------------------------------------------------------------
# Container Registry
# -----------------------------------------------------------------------------
REGISTRY=ghcr.io
IMAGE_PREFIX=your-org/streamhub
VERSION=latest

# -----------------------------------------------------------------------------
# OpenAI API
# -----------------------------------------------------------------------------
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# -----------------------------------------------------------------------------
# Content Source Credentials
# -----------------------------------------------------------------------------
# Store these in a secrets manager
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_BOT_TOKEN=

TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

YOUTUBE_API_KEY=

REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Worker Configuration
# -----------------------------------------------------------------------------
WORKER_CONCURRENCY=8
WORKER_BATCH_SIZE=20
WORKER_MAX_RETRIES=5

# -----------------------------------------------------------------------------
# Performance Tuning
# -----------------------------------------------------------------------------
EMBEDDING_DIMENSION=1536
SIMILARITY_THRESHOLD=0.85
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# -----------------------------------------------------------------------------
# Monitoring (Optional)
# -----------------------------------------------------------------------------
# SENTRY_DSN=
# PROMETHEUS_ENABLED=true
