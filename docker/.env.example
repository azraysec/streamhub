# =============================================================================
# StreamHub - Environment Variables (Development)
# =============================================================================
# Copy this file to .env and update the values
# DO NOT commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG
SECRET_KEY=your-super-secret-key-change-in-production

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL with pgvector)
# -----------------------------------------------------------------------------
POSTGRES_USER=streamhub
POSTGRES_PASSWORD=streamhub_dev
POSTGRES_DB=streamhub
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Full database URL (automatically constructed if not set)
# DATABASE_URL=postgresql+asyncpg://streamhub:streamhub_dev@postgres:5432/streamhub

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Redis URLs for different purposes
# REDIS_URL=redis://redis:6379/0
# CACHE_REDIS_URL=redis://redis:6379/1
# QUEUE_REDIS_URL=redis://redis:6379/2

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# -----------------------------------------------------------------------------
# OpenAI API (for content categorization)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# -----------------------------------------------------------------------------
# Content Source Credentials
# -----------------------------------------------------------------------------

# Telegram
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_BOT_TOKEN=

# Twitter/X
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# Instagram
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=

# YouTube
YOUTUBE_API_KEY=

# Reddit
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=StreamHub/1.0

# -----------------------------------------------------------------------------
# Worker Configuration
# -----------------------------------------------------------------------------
WORKER_CONCURRENCY=4
WORKER_BATCH_SIZE=10
WORKER_MAX_RETRIES=3

# -----------------------------------------------------------------------------
# Vector Database Configuration
# -----------------------------------------------------------------------------
EMBEDDING_DIMENSION=1536
SIMILARITY_THRESHOLD=0.85

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# -----------------------------------------------------------------------------
# Optional: Development Tools
# -----------------------------------------------------------------------------
# pgAdmin
PGADMIN_EMAIL=admin@streamhub.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Redis Commander
REDIS_COMMANDER_PORT=8081

# Debug port (for remote debugging)
DEBUG_PORT=5678
